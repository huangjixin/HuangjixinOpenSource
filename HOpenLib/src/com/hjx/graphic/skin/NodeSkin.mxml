<?xml version="1.0" encoding="utf-8"?>
<skin:NodeSkinBase xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   xmlns:skin="com.hjx.graphic.skin.*">
	<fx:Declarations>
	</fx:Declarations>
	<fx:Metadata>
		[HostComponent("com.hjx.graphic.Node")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			/**
			 *  @private
			 */
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number) : void
			{
				var bg:Number = getStyle("backgroundColor");
				
				if (backgroundColor != bg)
				{
					backgroundColor = bg;
				}      
				
				super.updateDisplayList(unscaledWidth, unscaledHeight);
			}
		]]>
	</fx:Script>
	<skin:states>
		<s:State name="normal"/>
		<s:State name="normalAndShowsCaret"/>
		<s:State name="selected"/>
		<s:State name="selectedAndShowsCaret"/>
	</skin:states>
	<s:Group id="base" left="0" right="0" top="0" bottom="0" width="100" height="50">
		<s:Rect left="0" right="0" top="0" bottom="0" radiusX="8" radiusY="8">
			<s:fill>
				<s:SolidColor color.normal="{this.backgroundColor}" color.selected="{this.selectedColor}"/>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke color="{this.borderColor}" weight="2"/>
			</s:stroke>
		</s:Rect>
		<s:Label id="labelElement" text="{hostComponent.label}" horizontalCenter="0" verticalCenter="0"/>
	</s:Group>
</skin:NodeSkinBase>
